<?xml version="1.0" encoding="UTF-8" ?>
<themeeditor>
	<version value="1.4">
	<ccc available="true" />
	<guest_checkout available="true" />
	<one_page_checkout available="true" />
	<store_locator available="true" />
	</version>
	<author>leotheme</author>
<name>Live Theme Editor</name>	
<selectors>
	<items>
		<header>Body Content</header>
		<match>body</match>
		<item>
			<type>image</type>
			<label>Body Bg Image</label>
			<selector>body, body:before</selector>
			<attrs>background-image</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Background Content</label>
			<selector>body</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>image</type>
			<label>Container Bg Image</label>
			<selector>.container</selector>
			<attrs>background-image</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Container Background</label>
			<selector>.container</selector>
			<attrs>background-color</attrs>
		</item> 
	 	<item>
			<type>fontsize</type>
			<label>Font-Size</label>
			<selector>#page</selector>
			<attrs>font-size</attrs>
		</item>
	 	<item>
			<type>fontfamily</type>
			<label>Font-Family</label>
			<selector>.wrapper .container .title_block</selector>
			<attrs>font-family</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>#page, #page p, #page div, #page h1, #page h2, #page h3, #page h4, #page h5, #page h6, .footer-container .contact_info .title, .thumbnail-container .product-price-and-shipping .regular-price, .thumbnail-container .product-price-and-shipping .discount-percentage</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Link Color</label>
			<selector>#page a, #page a span, .box_services h4 a, .widget-category_image .nbproducts .text</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Link Hover Color</label>
			<selector>#page a:hover, #page a:hover span, .box_services h4 a:hover, .widget-category_image:hover .nbproducts .text</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Headings Color</label>
			<selector>#page h1, #page h2, #page h3, #page h4, #page h5, #page h6</selector>
			<attrs>color</attrs>
		</item>
	</items>
	<!-- top bar -->
	<items>
		<header>Header Top</header>
		<match>header-top</match>
		<item>
			<type>text</type>
			<label>Bg Outside Color</label>
			<selector>.header-top</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Bg Color</label>
			<selector>.header-top .container</selector>
			<attrs>background-color</attrs>
		</item> 
	 	<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>#page .header-top .container, #page .header-top .container a, #page .header-top .container p, #page .header-top .container span, #page .header-top .container div, .header-top .container h1, .header-top .container h2, .header-top .container h3, .header-top .container h4, .header-top .container h5, .header-top .container h6</selector>
			<attrs>color</attrs>
		</item> 
	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>#page .header-top a, #page .header-top a span</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Link Hover</label>
			<selector>#page .header-top a:hover, #page .header-top a:hover span</selector>
			<attrs>color</attrs>
		</item> 
	</items>
	<items>
		<header>Footer</header>
		<match>footer</match>
		<item>
			<type>subtitle</type>
			<content>Footer Center</content>
		</item>
		<item>
			<type>text</type>
			<label>Bg Outside Color</label>
			<selector>#footer .footer-center</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Bg Color</label>
			<selector>#footer .footer-center .container</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>#footer .footer-center .container, #footer .footer-center .container p</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>#footer .footer-center a, #footer .footer-center ul li a</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Link Hover</label>
			<selector>#footer .footer-center a:hover, #footer .footer-center ul li a:hover</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Title Block</label>
			<selector>#footer .footer-center .block .title_block</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#footer .footer-center </selector>
			<attrs>background-image</attrs>
		</item>
		<item>
			<type>subtitle</type>
			<content>Footer Bottom</content>
		</item>
		<item>
			<type>text</type>
			<label>Bg Outside Color</label>
			<selector>#footer .footer-bottom</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Bg Color</label>
			<selector>#footer .footer-bottom .container</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>#footer .footer-bottom .container, #footer .footer-bottom .container div</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#footer .footer-bottom </selector>
			<attrs>background-image</attrs>
		</item>
	</items> 
</selectors>

<elements>
	<items>
		<header>Products</header>
		<match>product</match>
		<item>
			<type>text</type>
			<label>Text Color</label>
			<selector>.page-product section#main p, .page-product section#main span, .page-product section#main h7, .page-product section#main h6, .page-product section#main h5, .page-product section#main h4, .page-product section#main h3, .page-product section#main h2, .page-product section#main h1, .page-product section#main div</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Name Product</label>
			<selector>.page-product .product-detail-name</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Price</label>
			<selector>.page-product section#main .product-prices .current-price span</selector>
			<attrs>color</attrs>
		</item> 
 		<item>
			<type>text</type>
			<label>Color Price Old</label>
			<selector>.page-product section#main .product-discount .regular-price</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>BgColor Cart</label>
			<selector>.product-actions .add-to-cart</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>BgColor Cart(hover)</label>
			<selector>.product-actions .add-to-cart:hover</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Color Cart</label>
			<selector>.product-actions .add-to-cart</selector>
			<attrs>color</attrs>
		</item> 
	</items>
	<items>
		<header>Modules default in Sidebar</header>
		<match>modules</match>
			<item>
				<type>text</type>
				<label>Heading Background</label>
				<selector>.sidebar .block .title_block</selector>
				<attrs>background-color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Heading Color</label>
				<selector>.sidebar .block .title_block a, .sidebar .block .title_block</selector>
				<attrs>color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Content Background</label>
				<selector>.sidebar .block .block_content</selector>
				<attrs>background-color</attrs>
			</item>  
			<item>
				<type>text</type>
				<label>Content Color</label>
				<selector>.sidebar .block .block_content p, .sidebar .block .block_content span, .sidebar .block .block_content h1</selector>
				<attrs>color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Link Color</label>
				<selector>.sidebar .block .block_content a, .block-categories .category-sub-menu li > a, .block-categories .category-sub-menu a.category-sub-link, #search_filters .facet .facet-label a, #search_filters .facet .custom-checkbox a</selector>
				<attrs>color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Link Hover Color</label>
				<selector>.sidebar .block .block_content a:hover, .block-categories .category-sub-menu li > a:hover, .block-categories .category-sub-menu a.category-sub-link:hover, #search_filters .facet .facet-label a:hover, #search_filters .facet .custom-checkbox a:hover</selector>
				<attrs>color</attrs>
			</item> 
	</items>

	<items>
		<header>Modules highlighted  in Sidebar</header>
		<match>highlighted-modules</match>
			<item>
				<type>text</type>
				<label>Heading Background</label>
				<selector>.sidebar .block-highlighted .title_block</selector>
				<attrs>background-color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Heading Color</label>
				<selector>.sidebar .block-highlighted .title_block, .sidebar .block-highlighted .title_block a </selector>
				<attrs>color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Content Background</label>
				<selector>.sidebar .block-highlighted .block_content</selector>
				<attrs>background-color</attrs>
			</item>  

			<item>
				<type>text</type>
				<label>Content Color</label>
				<selector>.sidebar .block-highlighted .block_content p, .sidebar .block-highlighted .block_content span, .sidebar .block-highlighted .block_content h1</selector>
				<attrs>color</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Link Color</label>
				<selector>.sidebar .block-highlighted .block_content a, .block-categories.block-highlighted .category-sub-menu li > a, .block-categories.block-highlighted .category-sub-menu a.category-sub-link</selector>
				<attrs>color</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Link Hover Color</label>
				<selector>.sidebar .block-highlighted .block_content a:hover, .block-highlighted.block-categories .category-sub-menu li > a:hover, .block-highlighted.block-categories .category-sub-menu a.category-sub-link:hover</selector>
				<attrs>color</attrs>
			</item>
	</items>

</elements>
</themeeditor>
